{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "ide-ui-lib": [
        "dist/ide-ui-lib"
      ],
      "ide-ui-lib/*": [
        "dist/ide-ui-lib/*"
      ],
      "@stansil/component-property-editor": [
        "dist/stansil/component-property-editor/stansil-component-property-editor",
        "dist/stansil/component-property-editor"
      ],
      "@plankio/component-visual-editor": [
        "dist/plankio/component-visual-editor/plankio-component-visual-editor",
        "dist/plankio/component-visual-editor"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}